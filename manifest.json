{
  "manifest_version": 2,
  "name": "Worth Your Time?",
  "version": "1.0",
  "description": "Convert prices into equivalent work time",
  "browser_specific_settings": {
    "gecko": {
      "id": "worth-your-time@dg1.li"
    }
  },
  "icons": {
    "16": "icons/wyt1.png",
    "32": "icons/wyt2.png",
    "48": "icons/wyt2.png",
    "128": "icons/wyt3.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/wyt1.png",
      "32": "icons/wyt2.png",
      "48": "icons/wyt2.png",
      "128": "icons/wyt3.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    "styles.css"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "locales.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
